<?php

require_once 'vendor/autoload.php';

use Symfony\Component\Console\Application;

$console = new Application('Philips Hue Command Line Interface', '0.1.0');

function config($get){
	$config = new \Hue\Helpers\Config();
	return $config->get(strtoupper($get));
};

// This is the relevant addition
$console->addCommands(array(
    new Hue\Light\Index(),
    new Hue\Light\Update(),
    
    new Hue\Group\Index(),

    new Hue\User\Create(),
    new Hue\User\Index(),
    new Hue\User\Delete(),

    new Hue\Effect\Wave(),
    new Hue\Effect\Loop(),
    new Hue\Effect\LightPop(),
    new Hue\Effect\GroupPop(),
    new Hue\Effect\GroupWave(),
));
// End of relevant addition

$console->run();